                      <classes>
                           <class name="API.DetailsTests"/>
                           <class name="API.PopularTests"/>
                           <class name="API.SearchTest"/>
                      </classes>
                 </test>
                   <test name="UI Cross Browser Chrome">
                       <parameter name="BrowserName" value="Chrome"/>
                       <parameter name="HeadlessMode" value="false"/>
                       <parameter name="PageLoadStrategy" value="Eager"/>
                       <classes>
                           <class name="UI.TestRunner.Runner"/>
                       </classes>
                   </test>

