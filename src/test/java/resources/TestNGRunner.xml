<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Testing" verbose="1" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="Base.CustomListener" />
    </listeners>
    <test name="Cross Browser Chrome">
        <parameter name="BrowserName" value="Chrome"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>
    <test name="Cross Browser Edge">
        <parameter name="BrowserName" value="Edge"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>
    <test name="Cross Browser Firefox">
        <parameter name="BrowserName" value="Firefox"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>
</suite>